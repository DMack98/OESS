<configuration>

  <interfaces>
    [% FOREACH interface IN interfaces %]
    <interface>
      <name>[% interface.name %]</name>
      <unit operation='delete'>
        <name>[% interface.tag %]</name>
      </unit>
    </interface>
    [% END %]
  </interfaces>

  <routing-instances>
    <instance operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]</name>
    </instance>
  </routing-instances>

  <policy-options>
    <policy-statement operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]</name>
    </policy-statement>

    <policy-statement operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]-IN</name>
    </policy-statement>

    <policy-statement operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]-OUT</name>
    </policy-statement>

    <community operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]</name>
    </community>
    <community operation='delete'>
      <name>OESS-L3VPN-[% l3vpn_id %]-BGP</name>
    </community>
  </policy-options>

</configuration>
