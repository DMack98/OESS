<configuration>
  <interfaces>
    [% FOREACH interface IN interfaces %]
    <interface>
      <name>[% interface.name %]</name>
      <unit>
        <name>[% interface.tag %]</name>
        <description>OESS-L3VPN-[% vrf_id %]</description>
        <encapsulation>vlan-ccc</encapsulation>
        <vlan-id>[% interface.tag %]</vlan-id>
        <output-vlan-map>
          <swap/>
        </output-vlan-map>
        [% FOREACH peer IN interface.peers %]
        <family>
          <inet>
            <mtu>9000</mtu>
            <address>
              <name>[% peer.local_ip %]</name>
            </address>
          </inet>
        </family>
        [% END %]
      </unit>
    </interface>
    [% END %]
  </interfaces>
  <routing-instances>
    <instance>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <instance-type>vrf</instance-type>
      [% FOREACH interface IN interfaces %]
      <interface>
	<name>[% interface.name %]</name>
      </interface>
      [% END %]
      <route-distinguisher>
	<rd-type>[% switch.loopback %]:[% vrf_id %]</rd-type>
      </route-distinguisher>
      <vrf-import>OESS-L3VPN-[% vrf_id %]-IMPORT</vrf-import>
      <vrf-export>OESS-L3VPN-[% vrf_id %]-EXPORT</vrf-export>
      <vrf-table-label></vrf-table-label>
      <routing-options>
	<router-id>[% switch.loopback %]</router-id>
	<autonomous-system>
	  <as-number>55038</as-number>
	  <independent-domain></independent-domain>
	</autonomous-system>
      </routing-options>
      <protocols>
	<bgp>
	  <log-updown/>
	  <group>
	    <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
	    <family>
	      <inet>
		<unicast>
		  <prefix-limit>
		    <maximum>[% prefix_limit %]</maximum>
		    <teardown>
		      <limit-threshold>90</limit-threshold>
		      <idle-timeout>
			<timeout>30</timeout>
		      </idle-timeout>
		    </teardown>
		  </prefix-limit>
		</unicast>
	      </inet>
	    </family>
	    <local-as>
	      <as-number>55038</as-number>
	    </local-as>
	    [% FOREACH interface IN interfaces %]
	      [% FOREACH bgp in interface.peers %]
	    <neighbor>
	      <name>[% bgp.peer_ip %]</name>
	      <description>OESS-L3VPN-[% vrf_id %] -[% description %]</description>
	      <import>OESS-L3VPN-[% vrf_id %]-IN</import>
	      <authentication-key>[% bgp.key %]</authentication-key>
	      <export>OESS-L3VPN-[% vrf_id %]-OUT</export>
	      <peer-as>[% bgp.asn %]></peer-as>
	    </neighbor>
	      [% END %]
	    [% END %]
	  </group>
	</bgp>
      </protocols>
    </instance>
  </routing-instances>
  <policy-options>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <term>
	<name>direct</name>
	<from>
	  <protocol>direct</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
      <term>
	<name>bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
      <term>
	<name>reject</name>
	<then>
	  <reject/>
	</then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-IN</name>
      <term>
	<name>remove-comms-rt</name>
	<then>
	  <community>
	    <delete/>
	    <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	  </community>
	  <next>term</next>
	</then>
      </term>
      <term>
	<name>import-bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]-BGP</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-OUT</name>
      <term>
	<name>remove-comms-rt</name>
	<then>
	  <community>
	    <delete/>
	    <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	  </community>
	  <next>term</next>
	</then>
      </term>
      <term>
	<name>export-bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <accept/>
	</then>
      </term>
      <term>
	<name>export-direct</name>
	<from>
	  <protocol>direct</protocol>
	</from>
	<then>
	  <accept/>
	</then>
      </term>
    </policy-statement>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <members>target:55038:[% vrf_id %]</members>
    </community>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
      <members>55038:[% vrf_id %]</members>
    </community>
  </policy-options>
</configuration>
