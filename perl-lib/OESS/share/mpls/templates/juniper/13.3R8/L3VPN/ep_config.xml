<configuration>
  <interfaces>
    [% FOREACH interface IN interfaces %]
    <interface>
      <name>[% interface.name %]</name>
      <unit>
        <name>[% interface.tag %]</name>
        <description>OESS-L3VPN-[% vrf_id %]</description>
        <vlan-id>[% interface.tag %]</vlan-id>
        <family>
          <inet>
            <mtu>9000</mtu>
            [% FOREACH peer IN interface.peers %]
            <address>
              <name>[% peer.local_ip %]</name>
            </address>
            [% END %]
          </inet>
        </family>
      </unit>
    </interface>
    [% END %]
  </interfaces>
  [% FOREACH interface IN interfaces %]
  [% IF interface.bandwidth > 0 %]
  <class-of-service>
    <interfaces>
      <interface>
        <name>[% interface.name %]</name>
        <unit>
          <name>[% interface.tag %]</name>
          <shaping-rate>
            <rate>[% interface.bandwidth %]m</rate>
          </shaping-rate>
        </unit>
      </interface>
    </interfaces>
  </class-of-service>
  [% END %]
  [% END %]
  <routing-instances>
    <instance>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <instance-type>vrf</instance-type>
      [% FOREACH interface IN interfaces %]
      <interface>
	<name>[% interface.name %].[% interface.tag %]</name>
      </interface>
      [% END %]
      <route-distinguisher>
	<rd-type>[% switch.loopback %]:[% vrf_id %]</rd-type>
      </route-distinguisher>
      <vrf-import>OESS-L3VPN-[% vrf_id %]-IMPORT</vrf-import>
      <vrf-export>OESS-L3VPN-[% vrf_id %]-EXPORT</vrf-export>
      <vrf-table-label></vrf-table-label>
      <routing-options>
	<router-id>[% switch.loopback %]</router-id>
	<autonomous-system>
	  <as-number>55038</as-number>
	  <independent-domain></independent-domain>
	</autonomous-system>
      </routing-options>
      <protocols>
	<bgp>
	  <log-updown/>
	  <group>
	    <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
	    <family>
	      <inet>
		<unicast>
		  <prefix-limit>
		    <maximum>[% prefix_limit %]</maximum>
		    <teardown>
		      <limit-threshold>90</limit-threshold>
		      <idle-timeout>
			<timeout>30</timeout>
		      </idle-timeout>
		    </teardown>
		  </prefix-limit>
		</unicast>
	      </inet>
	    </family>
	    <local-as>
	      <as-number>55038</as-number>
	    </local-as>
	    [% FOREACH interface IN interfaces %]
	      [% FOREACH peer in interface.peers %]
	    <neighbor>
	      <name>[% peer.peer_ip %]</name>
	      <description>OESS-L3VPN-[% vrf_id %]</description>
	      <import>OESS-L3VPN-[% vrf_id %]-IN</import>

	      [% IF peer.key != -1 %]
	      <authentication-key>[% peer.key %]</authentication-key>
	      [% END %]

	      <export>OESS-L3VPN-[% vrf_id %]-OUT</export>
	      <peer-as>[% peer.asn %]</peer-as>
	    </neighbor>
	      [% END %]
	    [% END %]
	  </group>
	</bgp>
      </protocols>
    </instance>
  </routing-instances>
  <policy-options>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-EXPORT</name>
      <term>
	<name>direct</name>
	<from>
	  <protocol>direct</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
      <term>
	<name>bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
      <term>
	<name>reject</name>
	<then>
	  <reject/>
	</then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-IMPORT</name>
      <term>
        <name>import</name>
        <from>
          <community>OESS-L3VPN-[% vrf_id %]</community>
        </from>
        <then>
          <accept/>
        </then>
      </term>
      <term>
        <name>reject</name>
        <then>
          <reject/>
        </then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-IN</name>
      <term>
	<name>remove-comms-rt</name>
	<then>
	  <community>
	    <delete/>
	    <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	  </community>
	  <next>term</next>
	</then>
      </term>
      <term>
	<name>import-bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <community>
	    <add/>
	    <community-name>OESS-L3VPN-[% vrf_id %]-BGP</community-name>
	  </community>
	  <accept/>
	</then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-OUT</name>
      <term>
	<name>remove-comms-rt</name>
	<then>
	  <community>
	    <delete/>
	    <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	  </community>
	  <next>term</next>
	</then>
      </term>
      <term>
	<name>export-bgp</name>
	<from>
	  <protocol>bgp</protocol>
	</from>
	<then>
	  <accept/>
	</then>
      </term>
      <term>
	<name>export-direct</name>
	<from>
	  <protocol>direct</protocol>
	</from>
	<then>
	  <accept/>
	</then>
      </term>
    </policy-statement>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <members>target:55038:[% vrf_id %]</members>
    </community>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
      <members>55038:[% vrf_id %]</members>
    </community>
  </policy-options>
</configuration>
